pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                sh 'cd test-with-maven && mvn clean install'
            }
        }
        stage('Test'){
            steps{
                sh 'cd test-with-maven && mvn test'
            }
        }
        stage('deploy'){
            steps{
                echo 'simulando despliegue de la aplicacion'
            }
        }
    }

    post{
        always{
            echo 'siempre se ejecutara'
        }
        success{
            echo 'si todo sale bien'
        }
        failure{
            echo 'se ejecuta si falla'
        }
    }
}